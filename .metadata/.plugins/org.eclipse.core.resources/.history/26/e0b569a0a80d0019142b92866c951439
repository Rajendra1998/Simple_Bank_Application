import asset.*;
import asset.credit.*;
import liable.*;
import liable.debit.*;
import java.util.*;

public class Bank {
	public static int balance;
	public static int credit;
	public static int code;
	public static int debit;
	public static int code2;
	public static int code1;
	public static int code3;
	public static int code4;
	
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		Responsibility r =new Responsibility();
		Amount a=new Amount();
		Credit c=new Credit();
		Debit d=new Debit();
		balance=a.showAmount(1000);
		r.input();
		r.show();
		while(true)
		{
			System.out.println("Enter the choice from below: \n\t 1 : BALANCE INQUIRY\n\t 2 : WITHDRAW\n\t 3 : DEPOSIT\n\t 4 : QUIT");
			System.out.println("Choose the correct code from above:");
			code=sc.nextInt();
			switch(code)
			{
			case 1:
				System.out.println("Your account balnce is "+balance+" . \n\n");
				break;
			case 2:
				System.out.println("Are you sure you want to WITHDRAW ?? \n\t Choose from below: \n\n\t\t 0 : NO\n\t\t 1 : YES");
				code1=sc.nextInt();
				if(code1==1)
				{
					credit=c.showCredit();
					balance=balance-credit;
					System.out.println("Now Your Account balance  is "+balance+" . \n\n");
				}
				else {
					break;
				}
				break;
			 case 3:
				 System.out.println("Are you sure you want to DEPOSIT ?? \n\t Choose from below: \n\n\t\t 0 : NO\n\t\t 1 : YES");
					code2=sc.nextInt();
					if(code2==1)
					{
						debit=d.showDebit();
						balance=balance+debit;
						System.out.println("Now Your Account balance  is "+balance+" . \n\n");
					}
					else {
						break;
					}
					break;
			  default:
				  System.out.println("Are you sure you want to QUIT ?? \n\t Choose from below: \n\n\t\t 0 : NO\n\t\t 1 : YES");
					code3=sc.nextInt();
					if(code3==1)
					{
						System.out.println("Do you want to display your account balance on screen ?\\n\\t Choose from below: \\n\\n\\t\\t 0 : NO\\n\\t\\t 1 : YES");
						code4=sc.nextInt();
						if(code4==1)
						{
							System.out.println("Now Your Account balance is "+balance+" . \n\n");
						}
						else
						{
							break;
						}
						System.out.println(" THANK YOU !!  ");
						System.exit(0);
					}
					else {
						break;
					}
					break;
						
				 
			
			}
		}
		

	}

}
